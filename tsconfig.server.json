{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "server.ts",
    "src/lib/boardPermissions.ts",
    "src/lib/db.ts",
    "src/lib/socket.ts",
    "src/types/settings.ts",
    "src/types/process.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
} 